<!-- heading -->
<div class="heading my-5">
    <h1>
        <i class="fas fa-sign-in"></i>
        sign-in
    </h1>
</div>

<!-- form to log in  -->
<div class="form-container container w-50" >
    <form action="/user/create-session" method="POST">
        <div class="mb-3 row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="email" name="email" class="form-control" id="staticEmail" required>
            </div>
        </div>
        <div class="mb-3 row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input type="password" name="password" class="form-control" id="inputPassword" required>
            </div>
        </div>
        <!-- div to show reCAPTCHA -->
        <div class="container w-50 mb-3" >
            <div class="g-recaptcha" data-sitekey="6Lfae54eAAAAABIwqyUDixwJmk5jBToCX_mzpMXV">
            </div>
        </div>

        <div class="col-auto">
            <button type="submit" class="btn btn-outline-light mb-3">Sign In</button>
        </div>
    </form>
</div>


<!-- links -->
<div class="other-link ">

    <h3>
        Other Links
    </h3>
    
    <a  href="/user/auth/google" class="btn btn-primary mb-3">
        <i class="fa-brands fa-google"></i>
        Google
    </a>
    <a  href="/user/sign-up" class="btn btn-secondary mb-3">
        <i class="fas fa-user "></i>
        Sign-Up
    </a>
    
</div>